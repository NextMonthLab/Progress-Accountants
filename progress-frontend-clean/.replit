modules = ["nodejs-20", "web"]
run = "npx serve dist -s"
hidden = [".config", ".git", "node_modules"]

[nix]
channel = "stable-24_05"

[deployment]
build = ["npm", "run", "build"]
run = ["npx", "serve", "dist", "-s", "-p", "80"]

[[ports]]
localPort = 3000
externalPort = 80

[workflows]
runButton = "Build and Serve"

[[workflows.workflow]]
name = "Build and Serve"
author = "agent"

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx serve dist -s -p 3000"
waitForPort = 3000